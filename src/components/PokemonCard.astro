---
import { type PokemonType, TypeColors } from "../lib/models/pokemonModels"
import { capitalizeFirstLetter, mapId } from "../lib/utils/utils"

const {pokemon} = Astro.props
---

<a href=pokemon/${pokemon.id}
class="w-60 h-60 p-1
flex flex-col items-center
bg-slate-400/10
border-gray-500 border rounded-2xl hover:bg-gray-200 cursor-pointer">

    <img class="w-28" src={pokemon.image}
    alt={`Una foto de ${pokemon.name}`}
    transition:name=media-image-${pokemon.name}/>

    <h3 class="text-2xl font-bold tracking-wide mt-1">{capitalizeFirstLetter(pokemon.name)}</h3>
    <p class="text-xs tracking-wide p-1">No. {mapId(pokemon.id)}</p>
    <div class="flex flex-row space-x-1 mt-2 p-1 gap-2">
        {pokemon.types.map((types : PokemonType) => (

            <p class= `${TypeColors[types.type.name]}
            opacity-80 rounded text-white text-center font-medium tracking-wide py-1 px-2 
            `>{types.type.name}</p>
        ))}
    </div>

</a> 