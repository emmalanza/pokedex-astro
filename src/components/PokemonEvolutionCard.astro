---
import { type PokemonType, TypeColors } from "../lib/models/pokemonModels"
import { capitalizeFirstLetter, mapId } from "../lib/utils/utils"



const {pokemon} = Astro.props
---

<div 
class="w-28 h-28
flex flex-col items-center 
box-border my-1">

    <img class="w-12" src={pokemon.image} 
    alt={`Una foto de ${pokemon.name}`} 
    transition:name=`media-image-${pokemon.name}`/>

    <h3 class="text-lg font-bold tracking-wide">{capitalizeFirstLetter(pokemon.name)}</h3>
    <p class="text-xs tracking-wide">No. {mapId(pokemon.id)}</p>
    <div class="flex flex-row gap-1 mt-1">
        {pokemon.types.map((types : PokemonType) => (
            <p class=` ${TypeColors[types.type.name]} 
            opacity-80 rounded text-white text-center text-xs tracking-wide px-2 ` 
            >{types.type.name}</p>
        ))}
    </div>

</div>