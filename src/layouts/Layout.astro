---
import '@fontsource-variable/pixelify-sans';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">

	<head>
		<meta charset="UTF-8" />
		<meta name="description" 
		content="Pokedex de todos los pokemons hasta el momento" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<Header/>
		<div class="absolute inset-0 -z-10 min-h-screen w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"></div>
		<slot />

	</body>

</html>

<style is:global>
	body {
		position: relative;
		font-family: 'Pixelify Sans Variable', system-ui;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>
